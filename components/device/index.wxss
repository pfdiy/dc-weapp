.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading {
  width: 100%;
  height: 660rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1890ff;
  padding-bottom: 10rpx;
}

.circle {
  width: 420rpx;
  height: 420rpx;
  border: 20rpx solid #69c0ff;
  box-shadow: 0 0 0 10rpx #40a9ff;
  border-radius: 50%;
}

.wave {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: inset 0 0 100rpx #1890ff;
  overflow: hidden;
  z-index: 0;
}

.wave::before,
.wave::after {
  position: absolute;
  content: "";
  width: 200%;
  height: 200%;
  top: 0;
  left: 50%;
  transform: translate(-50%, -50%);
}

.wave::before {
  border-radius: 30%;
  background-color: #40a9ff;
  animation: animate 15s linear infinite;
}

.wave::after {
  border-radius: 40%;
  background-color: #91d5ff;
  animation: animate 25s linear infinite;
}

@keyframes animate {
  0% {
    top: -320rpx;
    transform: translate(-50%, -50%) rotate(0deg);
  }

  100% {
    top: -320rpx;
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

.font {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  font-size: 100rpx;
  color: #ffffff;
}

.font-state {
  height: 40rpx;
  width: 100rpx;
  border: 2rpx solid;
  border-radius: 30rpx;
  display: flex;
  margin-top: 160rpx;
  justify-content: center;
  align-items: center;
  position: absolute;
  font-size: 28rpx;
  color: #ffffff;
}


.state {
  width: 700rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -20rpx;
  border-radius: 15rpx;
  background-color: #ffffff;
  box-shadow: 2rpx 2rpx 2rpx ececec;
}

.state-font {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.state-font-text {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.state-font-text-size {
  font-size: 25rpx;
}

.state-font-text-bolder {
  margin-top: 10rpx;
  font-size: 45rpx;
  font-weight: bolder;
}

.map {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  width: 700rpx;
  height: 440rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
}

.map-view {
  width: 685rpx;
  height: 340rpx;
  padding: 10rpx;
}

.map-font {
  width: 700rpx;
  display: flex;
  justify-content: space-between;
}

.map-font-flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.map-image {
  margin-left: 10rpx;
  width: 35rpx;
  height: 35rpx;
}

.map-font-text {
  font-size: 24rpx;
  font-weight: bold;
}

.map-font-flex-down {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 3rpx;
}

.map-image-down {
  margin-left: 10rpx;
  width: 25rpx;
  height: 25rpx;
}

.map-font-text-down {
  margin-left: 10rpx;
  font-size: 24rpx;
  font-weight:500;
}

.map-bottom {
  margin-top: 20rpx;
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  border-radius: 15rpx;
}

.map-bottom-view {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  width: 320rpx;
  height: 120rpx;
  border-radius: 15rpx;
  background-color: #ffffff;
  margin-bottom: 25rpx;
}

.map-bottom-view-text {
  font-size: 35rpx;
  font-weight: bold;
  color: #1890ff;
}

.map-bottom-view-image {
  width: 50rpx;
  height: 50rpx;

}