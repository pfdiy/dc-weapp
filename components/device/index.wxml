<!--components/device/index.wxml-->
<view class="container">

    <view class="loading">
        <view class="circle">
            <view class="wave"></view>
        </view>
        <view class="font"><text>70%</text></view>
    </view>

    <view class="state">
        <view class="state-font">
            <view class="state-font-text">
                <text class="state-font-text-size">当前里程(km)</text>
                <text class="state-font-text-bolder">76.65</text>
            </view>
            <view class="state-font-text">
                <text class="state-font-text-size">总电压值(v)</text>
                <text class="state-font-text-bolder">76.65</text>
            </view>
            <view class="state-font-text">
                <text class="state-font-text-size">电池温度(℃)</text>
                <text class="state-font-text-bolder">76.65</text>
            </view>
        </view>
    </view>
    <view class="map">
        <view class="map-font">
            <view class="map-font-flex">
                <text class="map-font-text">GPS</text>
                <image class="map-image" src="/static/xinhao.png"></image>
            </view>
            <view class="map-font-flex">
                <text class="map-font-text">GSM</text>
                <image class="map-image" src="/static/xinhao.png"></image>
            </view>
        </view>
        <map class="map-view"></map>
        <view>
            <image class="map-image" src="/static/xinhao.png"></image>
            <text class="map-font-text">内蒙古赤峰市巴林左旗桥北物流园区03-01</text>
        </view>
    </view>
</view>