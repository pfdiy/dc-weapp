/* components/rental/index.wxss */
.container {
    display: flex;
    justify-content: center;
    width: 100%;
}

.rental-view {
    margin-top: 10rpx;
}

.rental-title-flex {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.rental-upload {
    display: flex;
    flex-direction: column;
}

.rental-upload-text {
    display: flex;
    flex-direction: column;
}

.rental-upload-flex {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-around;
}

.rental-upload-text-color {
    font-size: 26rpx;
    color: darkgrey;
}
.rental-upload-images{
    width: 300rpx;
    height: 200rpx;
}
.rental-title{
    font-size: 32rpx;
    font-weight: bold;
}