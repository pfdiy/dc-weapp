/* components/rental/index.wxss */
.container {
  display: flex;
  justify-content: center;
  width: 100%;
}

.rental-view {
  margin-top: 10rpx;
}

.rental-title-flex {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.rental-upload {
  display: flex;
  flex-direction: column;
}

.rental-upload-text {
  display: flex;
  flex-direction: column;
}

.rental-upload-flex {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
  background-color: #f5f5f5;
  margin-bottom: 15rpx;
  height: 200rpx;
}

.rental-upload-text-color {
  font-size: 26rpx;
  color: #8c8c8c;
}
.rental-upload-images {
  width: 300rpx;
  height: 200rpx;
}
.rental-title {
  font-size: 32rpx;
  font-weight: bold;
}
.show-map{
  margin-top: 15rpx;
  margin-left: 28rpx;
}
.show-text{
  color: #646566;
  font-size: 29rpx;
  margin-left: 6rpx;
}
.rental-pay{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-evenly;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.pay{
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.pay-text{
  color: #1890ff;
  margin-left: 50rpx;
}
.pay-button{
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.pay-button-vw{
  display: flex;
  align-items: center;
}