  border-radius: 15rpx;
  background-color: #ffffff;
  padding: 20rpx;
}

.state-title {
  font-size: 30rpx;
  color: #1890ff;
  margin-left: 30rpx;
  width: 100%;
}

.state-l {
  display: flex;
  align-items: center;
  height: 40rpx;
  width: 330rpx;
}

.l {
